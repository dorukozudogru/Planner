@model IEnumerable<Planner.Models.User>

@{
    ViewBag.Title = "Projeyi Kimler Görebilsin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(Html.BeginForm("AddAuthorizeToUserForProject", "Project", FormMethod.Post, new { role = "form" })))
{
    <div class="panel">
        <div class="panel-body">
            <div class="example-wrap">
                <h4 class="example-title">Yetki Ver</h4>
                <div>
                    <table class="table table-hover" data-plugin="selectable" data-row-selectable="true">
                        <thead>
                            <tr>
                                <th class="w-50">
                                    <span class="checkbox-custom checkbox-primary">
                                        <input class="selectable-all" type="checkbox">
                                    </span>
                                </th>
                                <th>
                                    Adı Soyadı
                                </th>
                                <th>
                                    E-Posta
                                </th>
                                <th>
                                    Admin Mi?
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="checkbox-custom checkbox-success">
                                            <input class="selectable-item" type="checkbox" name="users" value="@item.Id">
                                            <label></label>
                                        </span>
                                    </td>
                                    <td>@item.Name @item.Surname</td>
                                    <td>@item.EMail</td>
                                    <td>@item.IsAdmin</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div>
                    <input type="submit" class="btn btn-success" value="Değişiklikleri Kaydet" />
                </div>
            </div>
        </div>
    </div>
}