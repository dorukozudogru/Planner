@model Planner.Models.Project

@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
    ViewBag.ReturnUrl = "/Project/CreateProject";
}

<script type="text/javascript" language="javascript">
    function checkfile(sender) {
        var validExts = new Array(".pdf");
        var fileExt = sender.value;
        fileExt = fileExt.substring(fileExt.lastIndexOf('.'));
        if (validExts.indexOf(fileExt) < 0) {
            alert("Lütfen PDF dosyası yükleyin");
        }
    }
</script>

<section id="register" class="">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Projenizi Yükleyin</h2>
                <hr class="my-4">
            </div>
        </div>
    </div>
    @using (Html.BeginForm("UploadProject", "Project", FormMethod.Post, new { enctype = "multipart/form-data", returnUrl = ViewBag.ReturnUrl }))
    {

        <div class="container">

            <div class="text-center col-md-auto">
                <span>Proje Adı</span>
                <textarea class="form-control text-center" name="Name" placeholder="Projenizin Adını Giriniz"></textarea>
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="text-center col-md-auto">
                <span>Proje Açıklaması</span><br />
                <textarea class="form-control text-center" name="Description" placeholder="Projenizin Açıklamasını Giriniz"></textarea>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="text-center col-md-auto">
                <span>Proje Dosyası</span>
                <input type="file" id="input-file-now-custom-2" data-plugin="dropify" data-height="100" name="fileProject" id="fileProject" value="Yükle" accept=".pdf" class="form-control text-center" />
            </div>
            <br />
            <div class="text-center ">
                <input type="submit" value="Yükle" class="btn btn-danger btn-block" formaction="/Project/UploadProject" />
            </div>
            <br />
        </div>
    }
</section>