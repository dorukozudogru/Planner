<!DOCTYPE html>
<html lang="tr">

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#">@Session["UserName"].ToString() @Session["UserSurname"].ToString()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="~/User/UserMenu"><span class="fa fa-user-circle-o"> Hesabım</span> </a>
        </li>
        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="~/Account/Logout"><span class="fa fa-sign-out"> Çıkış Yap</span> </a>
        </li>
    </ul>
}
