@model Planner.Models.User

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<div class="panel panel-body container-fluid">
    <div class="example-wrap">
        @using (Html.BeginForm("EditProfile", "User", FormMethod.Post, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h4 class="example-title">Bilgileriniz</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group form-row">
                    <div class="form-group col-md-3">
                        <label class="form-control-label">Ad</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-3">
                        <label class="form-control-label">Soyad</label>
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-3">
                        <label class="form-control-label">E-Posta</label>
                        @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-3">
                        <label class="form-control-label">Şifre</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group form-row">
                    <div class="form-group col-md-3">
                        <label class="form-control-label">T.C. Kimlik Numarası</label>
                        @Html.EditorFor(model => model.CitizenshipNo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-3">
                        <label class="form-control-label">Doğum Tarihi</label>
                        @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control", data_plugin = "datepicker" } })
                    </div>
                    <div class="form-group col-md-3">
                        <label class="form-control-label">Yaşadığınız Şehir</label>
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-3">
                        <label class="form-control-label">Telefon</label>
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group form-row">
                    <div class="form-group col-md-6">
                        <label class="form-control-label">Mezun Olduğunuz/Okuduğunuz Okul</label>
                        @Html.EditorFor(model => model.School, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-control-label">Mezun Olduğunuz/Okuduğunuz Bölüm</label>
                        @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group form-row">
                    <div class="form-group col-md-12">
                        <label class="form-control-label" for="Job">Mesleğiniz</label>
                        @Html.EditorFor(model => model.Job, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Job, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group form-row">
                    <label class="form-control-label">Hesabım Aktif/Pasif</label>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive)
                    </div>
                </div>
                <input type="submit" value="Güncelle" class="btn btn-success" formaction="/User/EditProfile" />
            </div>
        }
    </div>
</div>