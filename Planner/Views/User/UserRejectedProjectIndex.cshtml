@model IEnumerable<Planner.Models.vwRejectedProjects>

@{
    ViewBag.Title = "Reddedilen Projelerim";
    Layout = "~/views/Shared/_LayoutLogged.cshtml";
}

<div class="panel">
    <header class="panel-heading">
        <div class="panel-actions"></div>
        <h3 class="panel-title">Reddedilen Projelerim</h3>
    </header>
    <div class="panel-body">
        <table class="table table-hover dataTable table-striped w-full" data-plugin="dataTable">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Açıklama</th>
                    <th>Ret Sebebi</th>
                    <th>Ret Tarihi</th>
                    <th>Görüntüle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center">
                        <td style="vertical-align:middle">@Html.DisplayFor(modelItem => item.ProjectName)</td>
                        <td style="vertical-align:middle"><textarea placeholder="@item.ProjectDescription" readonly class="form-control text-center"></textarea></td>
                        <td style="vertical-align:middle"><textarea placeholder="@item.RejectCause" readonly class="form-control text-center"></textarea></td>
                        <td style="vertical-align:middle">@Html.DisplayFor(modelItem => item.RejectDate)</td>
                        <td style="vertical-align:middle"><a href="@Url.Action("Download", "Project", new { id = item.ProjectId })" target="_blank" class="btn btn-info"><span class="fa fa-search"></span></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>